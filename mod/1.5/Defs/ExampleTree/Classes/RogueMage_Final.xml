      <defaultLabelColor>(0.6, 0.5, 0.8)</defaultLabelColor>
      <stages>
          <li>
              <statOffsets>
                  <PsychicSensitivity>0.10</PsychicSensitivity>
              </statOffsets>
          </li>
      </stages>
